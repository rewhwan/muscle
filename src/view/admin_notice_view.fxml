<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminNoticeViewController">
   <children>
      <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="500.0" prefWidth="1000.0" spacing="15.0">
         <children>
            <Label text="Notice 수정 &amp; 관람">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <Label text="제목 :  ">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtTitle" prefHeight="40.0" prefWidth="800.0" style="-fx-background-color: transparent; -fx-border-color: black;" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label text="내용 :  ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="txtContents" prefHeight="300.0" prefWidth="800.0" style="-fx-background-color: transparent; -fx-border-color: black;" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button fx:id="btnModify" mnemonicParsing="false" text="수정" />
                  <Button fx:id="btnExit" mnemonicParsing="false" text="닫기" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
